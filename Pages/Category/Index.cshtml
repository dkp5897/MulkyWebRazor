@page
@model MulkyWebRazor.Pages.Category.IndexModel

    <div class="container" >
        <div class="row pt-4 pb-2">
            <div class="col-6">
                <h1>Category List</h1>
            </div>
            <div class="col-6 text-end">
                <a asp-page="/Category/Create" class="btn btn-primary">
                    <i class="bi bi-patch-plus"></i> Create New Category
                </a>
            </div>
        </div>
<table class="table table-bordered table-striped">
    <thead>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th></th>
    </thead>
    <tbody>
            @foreach (var obj in Model.Categories.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td align="right">
                    <div class="w-75  btn-group" role="group">
                        <a asp-page="/Category/Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/Category/Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table> 
</div>